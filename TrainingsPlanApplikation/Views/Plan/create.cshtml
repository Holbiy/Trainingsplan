@{
    ViewData["Title"] = "Plan 1 bearbeiten";
}
@model TrainingsPlanApplikation.Models.Domain.TrainingPlan
    
<link rel="stylesheet" href="~/css/plan.css"/>
<link rel="stylesheet" href="~/css/form.css"/>

<h1>Trainingsplan erstellen</h1>

<form>
    <label asp-for="Title"></label>
    <input asp-for="Title">
    <span asp-validation-for="Title"></span>

    <label asp-for="Description"></label>
    <input asp-for="Description">
    <span asp-validation-for="Description"></span>

</form>

<div class="OverView">


    <div class="Exercise">
        <div class="informations">
            <span class="title">Cruches</span>
            <span class="description">Bei den Crunches liegt man auf dem Boden und versucht mit seiner eigenen Bauchmusken sich hochzudrücken.</span>
        </div>
        <div class="icons">
            <img src="/img/delete.png" class="icon">
            <div class="arrows">
                <img src="/img/arrow_up.png" class="icon">
                <img src="/img/arrow_down.png" class="icon">
            </div>
        </div>
        <div class="img">
            <img src="~/img/schulterpresse.jpg">
        </div>

        <div class="reps">
            <span>5 Wiederholungen</span>
        </div>

    </div>

    <div class="Exercise">
        <div class="informations">
            <span class="title">Schulterpresse</span>
            <span class="description">Bei der Schulterpresse nimmt man zwei kurzhanteln und drückt diese mit seiner Schulterkraft nach oben. Dabei ist ein gerader Rücken sehr wichtig.</span>
        </div>
        <div class="icons">
            <img src="/img/delete.png" class="icon">
            <div class="arrows">
                <img src="/img/arrow_up.png" class="icon">
                <img src="/img/arrow_down.png" class="icon">
            </div>
        </div>
        <div class="img">
            <img src="~/img/schulterpresse.jpg">
        </div>

        <div class="reps">
            <span>15 Wiederholungen</span>
        </div>

    </div>

    <div class="Exercise">
        <div class="informations">
            <span class="title">Squads</span>
            <span class="description">Mit Squads werden die Beine stark trainiert. Dabei kann ein sehr hohes gewicht gewählt werden.</span>
        </div>
        <div class="icons">
            <img src="/img/delete.png" class="icon">
            <div class="arrows">
                <img src="/img/arrow_up.png" class="icon">
                <img src="/img/arrow_down.png" class="icon">
            </div>
        </div>
        <div class="img">
            <img src="~/img/schulterpresse.jpg">
        </div>

        <div class="reps">
            <span>2 Wiederholungen</span>
        </div>

    </div>


</div>
<button class="green">Erstellen</button>

<button class="green" onclick="window.location.href='@Url.Action("Add", "Exercise")'">Übung hinzufügen</button>